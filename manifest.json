{
  "manifest_version": 2,
  "name": "Toggle.me - WordPress Theme/Plugin detector",
  "description": "Find out which WordPress theme and plugins your favorite sites are using.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "toggle.html",
    "default_title": "Toggle.me detector"
  },
  "background": {
    "scripts": [
      "js/jquery.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "js/toggleInject.js"
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "webRequest",
    "activeTab",
    "https://alpha.toggle.me/",
    "http://toggle.app/",
    "https://toggle.me/",
    "https://ajax.googleapis.com/",
    "https://cdnjs.cloudflare.com/*",
    "https://fonts.googleapis.com/*"
  ]
}