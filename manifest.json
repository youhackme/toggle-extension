{
  "manifest_version": 2,
  "name": "Toggle.me - Technology detector",
  "description": "Find out which WordPress theme, plugins, applications, technologies your favorite sites are using.",
  "version": "1.0.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "toggle.html",
    "default_title": "Toggle.me detector"
  },
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "page": "background.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "exclude_matches": [
        "https://alpha.toggle.me/",
        "http://toggle.test/",
        "https://toggle.me/"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "js/toggleInject.js"
  ],
  "permissions": [
    "http://*/*",
    "https://*/*",
    "webRequest",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}